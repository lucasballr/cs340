			<div class="form-group">
			<label for="cMake">Dealership ID:</label>
			<input type="text" class="form-control" name="dealership_ID" value="{{transaction.dealership_ID}}">
			</div>
			<div class="form-group">
			<label for="cModel">Car ID:</label>
			<input type="text" class="form-control" name="car_ID" value="{{transaction.car_ID}}">
			</div>
			<div class="form-group">
			<label for="cYear">Customer ID:</label>
			<input type="text" class="form-control" name="customer_ID" value="{{transaction.customer_ID}}">
			</div>
		</form>
		<button type="button" class="btn btn-danger" onclick="updateTransaction({{transaction.id}})">Save</button>
