<p class="text-center">
This is the customer page
</p>

<div class="container">
	<div class="jumbotron">
	  <div class="row">
	    <div class="col-sm">
			<h3>Add Customer</h3>
			<form id="addCustomer" action="/customers" method="post">
			  <div class="form-group">
				<label for="did">Dealership ID:</label>
				<input type="text" class="form-control" name="dealership_ID">
			  </div>
			  <div class="form-group">
				<label for="fName">First Name:</label>
				<input type="text" class="form-control" name="fName">
			  </div>
			  <div class="form-group">
				<label for="lName">Last Name:</label>
				<input type="text" class="form-control" name="lName">
			  </div>
			  <button type="submit" class="btn btn-primary">Submit</button>
			</form>
	    </div>
	    <div class="col-lg-auto">
				<h3>Customers</h3>
				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">ID</th>
							<th scope="col">First Name</th>
							<th scope="col">Last Name</th>
						</tr>
					</thead>
					<tbody>
						{{#each customers}}
						<tr>
							<th scope="row">{{id}}</th>
							<td>{{fName}}</td>
							<td>{{lName}}</td>
							<td><a class="btn btn-secondary" href="/customers/{{id}}" role="button">Edit</a></td>
							<td><button type="button" class="btn btn-danger" onClick="deleteCustomer({{id}})">Delete</button></td>
						</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
	    <div class="col-sm">

	    </div>
	  </div>
	</div>
</div>
