<div class="container">
	<div class="jumbotron">

		<h3>Update Employee</h3>
		<form id='update-employee' action='/employees' method='post'>
			<div class="form-group">
			<label for="cMake">First Name:</label>
			<input type="text" class="form-control" name="fname" value="{{employee.fname}}">
			</div>
			<div class="form-group">
			<label for="cModel">Last Name:</label>
			<input type="text" class="form-control" name="lname" value="{{employee.lname}}">
			</div>
			<div class="form-group">
			<label for="cYear">Dealership ID:</label>
			<input type="text" class="form-control" name="dealership_ID" value="{{employee.dealership_ID}}">
			</div>
			<div class="form-group">
			<label for="cPrice">Type:</label>
			<input type="text" class="form-control" name="type" value="{{employee.type}}">
			</div>
		</form>
		<button type="button" class="btn btn-danger" onclick="updateEmployee({{employee.id}})">Save</button>
	</div>
</div>
