<br>
<p class="text-center">This is the page where you can view the dealerships in the database along with relevant information</p>
<br>

<div class="container">
	<div class="jumbotron">
	  <div class="row">
	    <div class="col-sm">
			<h3>Add Dealership</h3>
			<form id="addDealership" action="/dealerships" method="post">
			  <div class="form-group">
				<label for="dName">Dealership Name:</label>
				<input type="text" class="form-control" name="name">
			  </div>
			  <div class="form-group">
				<label for="dPhone">Dealership Phone Number:</label>
				<input type="text" class="form-control" name="phoneNum">
			  </div>
			  <div class="form-group">
				<label for="did">Dealership Car Stock:</label>
				<input type="text" class="form-control" name="carStock">
			  </div>
			  <button type="submit" class="btn btn-primary">Submit</button>
			</form>
	    </div>
	    <div class="col-lg-auto">
				<h3>Dealerships</h3>
				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">ID</th>
							<th scope="col">Name</th>
							<th scope="col">Phone Number</th>
							<th scope="col">Stock</th>
						</tr>
					</thead>
					<tbody>
						{{#each dealerships}}
						<tr>
							<th scope="row">{{id}}</th>
							<td>{{name}}</td>
							<td>{{phoneNum}}</td>
							<td>{{carStock}}</td>
							<td><a class="btn btn-secondary" href="/dealerships/{{id}}">Edit</button></td>
							<td><button type="button" class="btn btn-danger" onClick="deleteDealership({{id}})">Delete</button></td>
						</tr>
						{{/each}}
					</tbody>
				</table>
	    </div>
	    <div class="col-sm">

	    </div>
	  </div>
	</div>
</div>
