<p class="text-center">This is the page where you can view the cars in the database along with relevant information</p>
<div class="container">
  <div class="row justify-content-md-center">
		<div class="col-md-auto">
			<form id='searchCar' action='/cars/search' method='post'>
				<div class="form-row align-items-center">
					<h3>Search cars by manufacturer: </h3>
					<div class="col-auto">
						<label class="sr-only" for="search">search</label>
						<input type="text" class="form-control" name="iMake" placeholder="Honda">
					</div>
					<div class="col-auto">
						<button type="submit" class="btn btn-primary mb-2">Search</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

<div class="container">
	<div class="jumbotron">
	  <div class="row">
	    <div class="col-sm">
			<h3>Add Cars</h3>
			<form id='addCar' action='/cars' method='post'>
			  <div class="form-group">
				<label for="cMake">Make:</label>
				<input type="text" class="form-control" name="cMake">
			  </div>
			  <div class="form-group">
				<label for="cModel">Model:</label>
				<input type="text" class="form-control" name="cModel">
			  </div>
			  <div class="form-group">
				<label for="cYear">Year:</label>
				<input type="text" class="form-control" name="cYear">
			  </div>
			  <div class="form-group">
				<label for="cPrice">Price:</label>
				<input type="text" class="form-control" name="cPrice">
			  </div>
				<div class="form-group">
				<label for="dealership_ID">Dealership ID:</label>
				<input type="text" class="form-control" name="dealership_ID">
			  </div>
			  <input class="btn btn-primary" type="submit" value="Submit">
			</form>
	    </div>
	    <div class="col-lg-auto">
				<h3>Cars</h3>
				<table class="table table-striped">
				  <thead>
				    <tr>
				      <th scope="col">ID</th>
				      <th scope="col">Make</th>
				      <th scope="col">Model</th>
				      <th scope="col">Year</th>
							<th scope="col">Price</th>
							<th scope="col">Dealership</th>
				    </tr>
				  </thead>
				  <tbody>
							{{#each cars}}
							</tr>
					      <th scope="row">{{id}}</th>
					     	<td>{{make}}</td>
					      <td>{{model}}</td>
					      <td>{{year}}</td>
								<td>{{price}}</td>
								<td>{{name}}</td>
								<td><a class="btn btn-secondary" href="/cars/{{id}}" role="button">Edit</a></td>
								<td><button type="button" class="btn btn-danger" onclick="deleteCar({{id}})">Delete</button></td>
					    </tr>
							{{/each}}
				  </tbody>
				</table>
	    </div>
	    <div class="col-sm">
	    </div>
	  </div>
	</div>
</div>
