<div class="container">
	<div class="jumbotron">
	  <div class="row">
	    <div class="col-sm">
			<h3>Add Cars</h3>
			<form>
			  <div class="form-group">
				<label for="cid">Car ID:</label>
				<input type="text" class="form-control" id="cid">
			  </div>
			  <div class="form-group">
				<label for="cMake">Make:</label>
				<input type="text" class="form-control" id="cMake">
			  </div>
			  <div class="form-group">
				<label for="cModel">Model:</label>
				<input type="text" class="form-control" id="cModel">
			  </div>
			  <div class="form-group">
				<label for="cYear">Year:</label>
				<input type="text" class="form-control" id="cYear">
			  </div>
			  <div class="form-group">
				<label for="cPrice">Price:</label>
				<input type="text" class="form-control" id="cPrice">
			  </div>
			  <div class="form-group">
				<label for="did">Dealership ID:</label>
				<input type="text" class="form-control" id="did">
			  </div>
			  <button type="submit" class="btn btn-primary">Submit</button>
			</form>
	    </div>
	    <div class="col-lg-auto">
				<h3>Cars</h3>
				<table class="table table-striped">
				  <thead>
				    <tr>
				      <th scope="col">ID</th>
				      <th scope="col">Make</th>
				      <th scope="col">Model</th>
				      <th scope="col">Year</th>
							<th scope="col">Price</th>
							<th scope="col">Dealership</th>
				    </tr>
				  </thead>
				  <tbody>
				    <tr>
				      <th scope="row">1</th>
