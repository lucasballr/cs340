<head>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
	<title>Transactions</title>
</head>

<h1 class="text-center">Transactions Page</h1>

<ul class="nav justify-content-center">
  <li class="nav-item">
    <a class="nav-link active" href="/">Home</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/dealerships">Dealerships</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/employees">Employees</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/cars">Cars</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/transactions">Transactions</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/customers">Customers</a>
  </li>
</ul>
<br>

<p class="text-center">
This page is reserved for the transactions list.
Transactions may not be removed due to the ledger style.
</p>

<div class="container">
	<div class="jumbotron">
	  <div class="row">
	    <div class="col-sm">
			<h3>Add Transaction</h3>
			<form id="addTransaction" action="/transactions" method="post">
			  <div class="form-group">
				<label for="did">Dealership ID:</label>
				<input type="text" class="form-control" name="dealership_ID">
			  </div>
			  <div class="form-group">
				<label for="eid">Employee ID:</label>
				<input type="text" class="form-control" name="employee_ID">
			  </div>
			  <div class="form-group">
				<label for="tDate">Date:</label>
				<input type="text" class="form-control" name="date">
			  </div>
			  <div class="form-group">
				<label for="cid">Car ID:</label>
				<input type="text" class="form-control" name="car_ID">
			  </div>
			  <div class="form-group">
				<label for="customerId">Customer ID:</label>
				<input type="text" class="form-control" name="customer_ID">
			  </div>
			  <button type="submit" class="btn btn-primary">Submit</button>
			</form>
	    </div>
	    <div class="col-lg-auto">
				<h3>Transactions</h3>
				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">ID</th>
							<th scope="col">Dealership</th>
							<th scope="col">Car ID</th>
							<th scope="col">Customer</th>
							<th scope="col">Date</th>
						</tr>
					</thead>
					<tbody>
						{{#each transactions}}
						<tr>
							<th scope="row">{{id}}</th>
							<td>{{dealership_ID}}</td>
							<td>{{car_ID}}</td>
							<td>{{customer_ID}}</td>
							<td>{{date}}</td>
							<td><a class="btn btn-secondary" href="/transactions/{{id}}" role="button">Edit</a></td>
						</tr>
						{{/each}}
					</tbody>
				</table>
	    </div>
	    <div class="col-sm">

	    </div>
	  </div>
	</div>
</div>
